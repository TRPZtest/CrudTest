@model IEnumerable<CrudTest.Models.ViewModels.EmployeeView>

@{
    ViewData["Title"] = "EmployeesList";
}

<h1>EmployeesList</h1>

<p>
    <a class="btn btn-success" href="add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgrammingLanguageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>    
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammingLanguageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>           
            <td>
                <a class="btn btn-primary" href="/edit?id=@item.Id">Edit</a> |
                @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id }, new { @class = "btn btn-danger" })                  
            </td>
        </tr>
}
    </tbody>
</table>
